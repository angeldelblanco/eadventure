<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN" "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module rename-to="eadengine">
    <inherits name='aurelienribon.tweenengine' />
	<inherits name='com.badlogic.gdx.backends.gdx_backends_gwt' />

	<inherits name='es.eucm.ead.model' />
	<inherits name='es.eucm.ead.tools' />
	<inherits name='es.eucm.ead.reader' />
	<inherits name='es.eucm.ead.engine' />
	<inherits name='es.eucm.ead.legacyplugins.engine' />

	<!-- Other libraries -->
	<inherits name='java.util.lib' />
	<inherits name='org.slf4j.slf4j' />
	<inherits name='org.poly2tri.poly2tri' />
	<inherits name='com.gwtent.GwtEnt' />
	<inherits name='com.google.gwt.logging.Logging' />
	<inherits name='com.google.gwt.xml.XML' />

	<!-- Inherit the GIN (guice for gwt) module -->
	<inherits name='com.google.gwt.inject.Inject' />


	<source path="html" />
	<entry-point class='es.eucm.ead.engine.html.GwtLauncher' />

	<set-configuration-property name="gdx.assetpath"
		value="core/engine-resources/src/main/resources" />
	<set-configuration-property name="gdx.assetoutputpath"
		value="core/engine-html/src/main/webapp/" />
</module>