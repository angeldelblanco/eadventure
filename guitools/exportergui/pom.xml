<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>ead</groupId>
		<version>2.0.1-SNAPSHOT</version>
		<artifactId>base</artifactId>
		<relativePath>../../</relativePath>
	</parent>
	<groupId>ead.guitools</groupId>
	<version>2.0.1-SNAPSHOT</version>
	<artifactId>exportergui</artifactId>
	<packaging>jar</packaging>
	<name>Exporter GUI</name>
	<description>This utility can import and export all types of eAdventure games</description>
	<dependencies>
		<!-- Desktop dependencies. Not used in GWT compilation -->
		<dependency>
			<groupId>ead</groupId>
			<artifactId>exporter</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>ead</groupId>
			<artifactId>importer</artifactId>
			<version>${project.version}</version>			
		</dependency>
        <dependency>
            <groupId>com.badlogic.gdx</groupId>
            <artifactId>gdx</artifactId>
        </dependency>
        <dependency>
            <groupId>com.badlogic.gdx</groupId>
            <artifactId>gdx-natives</artifactId>
        </dependency>
        <dependency>
            <groupId>com.badlogic.gdx</groupId>
            <artifactId>gdx-backend-lwjgl</artifactId>
        </dependency>
        <dependency>
            <groupId>com.badlogic.gdx</groupId>
            <artifactId>gdx-backend-lwjgl-natives</artifactId>
        </dependency>
	</dependencies>
		<build>
			<plugins>
		        <plugin>
		            <artifactId>maven-assembly-plugin</artifactId>
		            <configuration>
		                <archive>
		                    <manifest>
		                        <mainClass>ead.guitools.exportergui.ExporterGUI</mainClass>
		                    </manifest>
		                </archive>
		                <descriptorRefs>
		                    <descriptorRef>jar-with-dependencies</descriptorRef>
		                </descriptorRefs>
		            </configuration>
		        </plugin>
		    </plugins>
    </build>
</project>
